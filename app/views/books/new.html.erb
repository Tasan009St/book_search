
<div class="main_form ">
<p>新しい本の登録</p>
</div>
<div class="main_form ">
    <%=form_with model: @book do |f| %>
    <ul>
        <li class="name">
            <label>ISBN</label>
            <%=f.text_field :isbn %>
        </li>
        <li class="name">
            <label>Title</label>
            <%=f.text_field :title %>
        </li>
        <li class="name">
            <label>著者</label>
            <%=f.text_field :author_id %>
        </li>
        <li>
            <input class="register" type="submit">
        </li>
    <% end %>
</div>